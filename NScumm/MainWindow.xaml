<Window x:Class="NScumm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NScumm"
        Title="MainWindow" Height="446" Width="594">
    <Window.Resources>
        <local:MiddleValueConverter x:Key="MiddleValueConverter" />
    </Window.Resources>
    <DockPanel>
        <Slider x:Name="slider1" DockPanel.Dock="Bottom" Minimum="0" Maximum="360" Height="20" />
        <Image Cursor="None" Name="_screen" RenderOptions.EdgeMode="Aliased" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="Uniform">
            <Image.RenderTransform>
                <RotateTransform CenterX="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Image}}, Path=ActualWidth, Converter={StaticResource MiddleValueConverter}}"
                                 CenterY="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Image}}, Path=ActualHeight, Converter={StaticResource MiddleValueConverter}}"
                                 Angle="{Binding ElementName=slider1, Path=Value}" />
            </Image.RenderTransform>
        </Image>
    </DockPanel>
</Window>
