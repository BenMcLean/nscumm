<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NScumm.Mobile.Views.GameLibraryView" xmlns:views="clr-namespace:NScumm.Mobile.Views"
		xmlns:i18n="clr-namespace:NScumm.Mobile.Resx;assembly=NScumm.Mobile.Resx">
	<ContentPage.Content>
		<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<ListView x:Name="FileLisView" VerticalOptions="Fill">
				<ListView.ItemTemplate>
					<DataTemplate>
						<TextCell Text="{Binding Description}">
							<TextCell.ContextActions>
								<MenuItem Clicked="OnDelete" CommandParameter="{Binding}" 
										  Text="{i18n:Translate ButtonDelete.Text}" IsDestructive="True" />
							</TextCell.ContextActions>
						</TextCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
	<ContentPage.ToolbarItems>
		<ToolbarItem x:Name="ScanToolbarItem" Text="{i18n:Translate ButtonScan.Text}" />
	</ContentPage.ToolbarItems>
</ContentPage>